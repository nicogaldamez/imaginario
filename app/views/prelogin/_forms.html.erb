<div id="signin_signout" class="row span3 well">
	<div id="signin">
		<h4> Inicio de sesión </h4>
		<%= link_to "Soy nuevo","#", 'class' => 'change', :class => "newUser", :onclick => "showSignup()" %>
		<div class="row">
			<div class="span3">
				<%= form_for(:session, :url => sessions_path) do |f| %>
				
					<%= f.text_field :email, :placeholder => 'Correo' %>
					<%= f.password_field :password, :placeholder => 'Clave' %>
										
					<%= f.submit "Iniciar sesión", :class => "btn btn-primary" %>
					<%= link_to "Olvidé mi clave","#", :class => 'forgot' %>
					
				<% end %>
				
				
			</div>
		</div>
		
	</div>
	
	<div id="signup">
		<h4> Registro de usuario </h4>
		<div class="row">
			<div class="span3">
				<%= form_for(@user) do |f| %>
				
					<%= f.text_field :firstname, :placeholder => 'Nombre' %>
					
					<%= f.text_field :email, :placeholder => 'Correo' %>
					
					<%= f.password_field :password, :placeholder => 'Clave' %>
					
					<%= f.submit "Registrarme", :class => "btn btn-primary" %>
					
					<%= link_to "Soy usuario","#", 'class' => 'imUser', :onclick => "showSignin()" %>
					
				<% end %>
			</div>
		</div>
	</div>
</div>
